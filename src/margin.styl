html:root .margin

  &--auto
    margin-right auto
    margin-left auto

  &--none
    margin 0

  &--1em
    margin 1em

  &--1rem
    margin 1rem

  &--tb-1em
    margin-top 1em
    margin-bottom 1em

  &--tb-1rem
    margin-top 1rem
    margin-bottom 1rem

  &--t-1em
    margin-top 1em

  &--t-1rem
    margin-top 1rem

  &--b-1em
    margin-bottom 1em

  &--b-1rem
    margin-bottom 1rem

  &--lr-1em
    margin-left 1em
    margin-right 1em

  &--lr-1rem
    margin-left 1rem
    margin-right 1rem

  &--l-1em
    margin-left 1em

  &--l-1rem
    margin-left 1rem

  &--r-1em
    margin-right 1em

  &--r-1rem
    margin-right 1rem
