html:root .margin

  &--1em
    margin 1em

  &--none
    margin 0

  &--auto
    margin-right auto
    margin-left auto

  &--tb-1em
    margin-top 1em
    margin-bottom 1em

  &--t-1em
    margin-top 1em

  &--b-1em
    margin-bottom 1em

  &--lr-1em
    margin-left 1em
    margin-right 1em

  &--l-1em
    margin-left 1em

  &--r-1em
    margin-right 1em
